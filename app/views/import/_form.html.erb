<div id="import">
  <%= form_tag import_sales_path, method: :post, remote: true, data: { multipart: true } do %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token() %>
    <div class="well">
      <%= label_tag 'Arquivo' %>
      <%= file_field_tag :file, required: true, accept: 'text/plain' %>
    </div>
    <hr>
    <div class="text-right">
      <button type="button" class="btn btn-default btn-sm btn-fill" data-dismiss="modal">Cancelar</button>
      <%= button_tag 'Enviar',
          data: { disable_with: 'Enviando' },
          class: 'btn btn-primary btn-sm btn-fill' %>
    </div>
  <% end %>
</div>
